---
const currentDateYear = new Date().getFullYear();
---

<footer>
  <div class="container">
    <ul>
      <li>
        <a href="#">GitHub</a>
      </li>
      <li>
        <a href="#">Twitter</a>
      </li>
      <li>
        <a href="#">More</a>
      </li>
    </ul>
    <p>
      <small>Copyright &copy; {currentDateYear} Your Name</small>
    </p>
  </div>
</footer>

<style>
  footer {
    margin-block-start: 4rem;
    padding-block: 1rem;
    background: linear-gradient(0deg, var(--tertiary-background-color) 0%, var(--background-color) 100%);
  }

  .container {
    display: grid;
    place-content: center;
  }

  ul {
    padding: 0;
    display: flex;
    flex-wrap: wrap;
    list-style: none;
    gap: 1rem;
  }
</style>
